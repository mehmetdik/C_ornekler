#include<stdio.h>
#include<conio.h>

void main()
{
	int sayi;
	char karekter[15];
	printf("Karekter=");
	scanf("%s",&karekter);
	printf("Sayi=");
	scanf("%d",&sayi);
	for (int j =1; j <=sayi; j++)
	{
		for (int i = 1; i < j; i++)
		{
		printf(" ");
		}
		for (int i = sayi; i >=j; i--)
		{
			printf("*");
		}
		printf("\n");
	}
	getch();
}


